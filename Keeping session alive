import org.apache.spark.SparkContext
import org.apache.hadoop.fs.{FileSystem, Path}

object RenameHDFSFile {

  def main(args: Array[String]): Unit = {
    val sc = new SparkContext("local[*]", "Rename HDFS File")

    val hadoopConf = sc.hadoopConfiguration
    val hdfs = FileSystem.get(hadoopConf)

    val sourcePath = new Path("hdfs:///path/to/source/file")
    val destPath = new Path("hdfs:///path/to/destination/file")

    if (hdfs.exists(sourcePath)) {
      hdfs.rename(sourcePath, destPath)
    } else {
      println(s"Source file ${sourcePath.toString} does not exist!")
    }

    sc.stop()
  }
}
