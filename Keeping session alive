val sparkExcelReadConfiguration = Map(
  "dataAddress" -> "A1", // Explicitly define the starting cell
  "header" -> "true",
  "treatEmptyValuesAsNulls" -> "false", // Change this to false to maintain structure
  "inferSchema" -> "false", // Disable automatic schema inference
  "useHeader" -> "true", // Use the first row as header
  "excerptSize" -> "0", // Disable excerpting which can cause misalignment
  "maxRowsInMemory" -> "20", // Increase if you have a large file
  "workbookPassword" -> "" // Only if your file is password protected
)

// Read with the modified configuration
val df = spark.read
  .format("com.crealytics.spark.excel")
  .options(sparkExcelReadConfiguration)
  .load("your_file_path.xlsx")
