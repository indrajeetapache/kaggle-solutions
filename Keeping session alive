 val output = new StringBuilder
  val error = new StringBuilder

  val exitCode = command ! ProcessLogger(
    (out: String) => output.append(out + "\n"),
    (err: String) => error.append(err + "\n")
  )

  if (output.nonEmpty) {
    println(s"Output: $output")
  } else {
    println("No output captured.")
  }

  if (error.nonEmpty) {
    println(s"Errors: $error")
  } else {
    println("No errors captured.")
  }
