// Function to normalize the value: keep as a string if it matches an Oracle date format, otherwise convert to Long
def normalizeValue(value: String): Any = {
  val oracleDatePattern = "^\\d{4}-\\d{2}-\\d{2}( \\d{2}:\\d{2}:\\d{2})?$" // Matches YYYY-MM-DD or YYYY-MM-DD HH:MM:SS
  if (value != null && value.matches(oracleDatePattern)) {
    value // Keep as is if it matches Oracle date format
  } else {
    BigDecimal(value).setScale(0, BigDecimal.RoundingMode.DOWN).toLong // Convert to Long for numeric values
  }
}
